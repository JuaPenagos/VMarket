        <div ng-app="Producto">
            <div ng-controller="ProductoCtrl">


                <div>
                    <ul>
                        <li ng-repeat="aproducts in Products">
                            {{aproducts.Nombre}} -- {{aproducts.Cantidad}}--<input type="number" min="0" ng-model="aproducts.CantidadReal" placeholder="agregarNuevaTarea">
                            <input type="button" ng-click="agregarProducto(aproducts)" value="Agregar" class="btn btn-default" />
                        </li>
                    </ul>
                </div>
                <div>
                    <ul>
                        <li ng-repeat="aproduct in Product">
                            {{aproduct.Nombre}} -- {{aproduct.Cantidad}}--{{aproduct.CantidadReal}}
                        </li>
                    </ul>
