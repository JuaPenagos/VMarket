@model VMarket.Models.OrderDetail

@{
    ViewBag.Title = "Index";
}


<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<title>Simple Dashboard</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<meta name="layout" content="main" />

<script type="text/javascript" src="http://www.google.com/jsapi"></script>

<script src="../Content/js/jquery/jquery-1.8.2.min.js" type="text/javascript"></script>
<link href="../Content/css/customize-template.css" type="text/css" media="screen, projection" rel="stylesheet" />

<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<!-- Bootstrap -->
<link rel="stylesheet" media="screen" href="../Content/css/bootstrap.min.css">
<link rel="stylesheet" media="screen" href="../Content/css/bootstrap-theme.min.css">

<!-- Bootstrap Admin Theme -->
<link rel="stylesheet" media="screen" href="../Content/css/bootstrap-admin-theme.css">
<link rel="stylesheet" media="screen" href="../Content/css/bootstrap-admin-theme-change-size.css">

<!-- Vendors -->
<link rel="stylesheet" media="screen" href="../Content/vendors/easypiechart/jquery.easy-pie-chart.css">
<link rel="stylesheet" media="screen" href="../Content/vendors/easypiechart/jquery.easy-pie-chart_custom.css">

<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    
    
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        


        <div class="form-horizontal">
            <h4>Mi Compra</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })    
            <div >
                Cliente
                <div >
                    Juan Penagos
                </div>
            </div>
    
            <div >
                Fecha
                <div >
                   2016-09-10 
                </div>
            </div>
        </div>
    }
    
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>

<div ng-app="Producto">
    <div ng-controller="ProductoCtrl">
        <div class="row">
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="text-muted bootstrap-admin-box-title">Productos</div>

                    </div>
                    <div class="bootstrap-admin-panel-content">
                        <table class="table table-striped">
                            <thead>
                                <tr>


                                    <th>Nombre</th>
                                    <th>Referencia</th>
                                    <th>Precio</th>
                                    <th>Cantidad</th>
                                    <th>Opcion</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="aproducts in Products">

                                    <td>{{aproducts.Nombre}}</td>
                                    <td>{{aproducts.CodigoBarras}}</td>
                                    <td>{{aproducts.Precio}}</td>
                                    <td><input type="number" min="0" ng-model="aproducts.CantidadReal" maxlength="4" size="4"></td>
                                    <td>
                                        <button class="btn btn-sm btn-success" ng-click="agregarProducto(aproducts)">
                                            <i class="glyphicon glyphicon-ok-sign"></i>
                                            Agregar
                                        </button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="text-muted bootstrap-admin-box-title">Mi compra</div>
                        <div class="pull-right"><span class="badge">Total: {{ getTotal() }}</span></div>
                    </div>
                    <div class="bootstrap-admin-panel-content">
                        <table class="table table-striped">
                            <thead>
                                <tr>

                                    <th>Producto</th>
                                    <th>Referencia</th>
                                    <th>Precio</th>
                                    <th>Cantidad</th>
                                    <th>Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="aproduct in Product">


                                    <td>{{aproduct.Nombre}}</td>
                                    <td>{{aproduct.CodigoBarras}}</td>
                                    <td>{{aproduct.Precio}}</td>
                                    <td>{{aproduct.CantidadReal}}</td>
                                    <td>{{aproduct.CantidadReal * aproduct.Precio}}</td>
                                    <td>
                                        <button class="btn btn-sm btn-success" ng-click="eliminarProducto(aproducts)">
                                            <i class="glyphicon glyphicon-ok-sign"></i>
                                            Agregar
                                        </button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <button class="btn btn-sm btn-success" ng-click="agregarOrden(Product)">
                <i class="glyphicon glyphicon-ok-sign"></i>
                Guardar Compra
            </button>
        </div>
    </div>

</div>


<script src="~/Scripts/angular.js"></script>
<script src="~/Scripts/Producto.js"></script>